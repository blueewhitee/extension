{
  "manifest_version": 3,
  "name": "YouTube Video Info",
  "version": "1.0",
  "description": "Scrapes YouTube video metadata.",
  "action": {
      "default_popup": "popup.html"
  },
  "background": {
      "service_worker": "background.js",
      "type": "module"
  },
  "content_scripts": [
      {
          "matches": [
              "*://www.youtube.com/watch*",
              "*://www.youtube.com/shorts*"
          ],
          "js": ["content.js"]
      }
  ],
  "permissions": [
      "activeTab",
      "scripting",
      "storage"
  ],
  "host_permissions": [
      "https://www.youtube.com/*",
      "https://www.googleapis.com/*"
  ],
  "web_accessible_resources": [{
      "resources": ["videoCategories.json"],
      "matches": ["<all_urls>"]
  }]
}